<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.andretortolano.githubsearch.views.SearchUserView">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/repository_owner_avatar"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/repository_owner_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:text="@string/owner"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/repository_owner_avatar"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/repository_owner"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toEndOf="@+id/repository_owner_title"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/repository_name_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="48dp"
            android:text="@string/name"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/repository_owner_avatar"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/repository_name"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:layout_marginTop="48dp"
            app:layout_constraintStart_toEndOf="@+id/repository_name_title"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toTopOf="parent" />

        <ProgressBar
            android:id="@+id/progress_view"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:visibility="gone"
            android:indeterminate="true" />
    </android.support.constraint.ConstraintLayout>

</FrameLayout>
